<h2>Details of a selected user</h2>

 <img src=<%= @user.photo %> alt="profile picture of <%= @user.name %>" />
<p><%= @user.bio %></p>

<% @user.return_recent_posts.each_with_index do |post, index|%>
<p>Post #<%= index+1 %></p>
<p>
  <%= post.text%>
</p>
 <span>Likes : <%= post.likes_counter %></span>
  <span>Comments : <%= post.comments_counter %></span>
<% end %>
<%= link_to "See all posts", user_posts_path(@user.id)%>

