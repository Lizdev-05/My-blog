<h2>Details of a selected user</h2>

<span><%= @user.photo %></span>
<span><%= @user.name %></span>

<p><%= @user.bio %></p>

<% @user.posts.each_with_index do |post, index|%>
<p>Post #<%= index+1 %></p>
<p>
  <%= post.text%>
</p>
 <span>Likes : <%= post.likes_counter %></span>
  <span>Comments : <%= post.comments_counter %></span>
<% end %>

